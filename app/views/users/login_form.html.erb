<div class="main users-login-form">
  <div class="container">
    <h1>ログイン</h1>
    <div class="form users-form">
      <% if @error_messsage %>
      <div class="error-message">
        <%= @error_message %>
      </div>
       <!-- email,password -->
      <% form_tag("/login") %>
      <p>メールアドレス</p>
      <input name="email" value="<%= @email">
      <p>パスワード</p>
      <input type="password" name="password" value="<%= @password %>">
      <input type="submit" value="ログイン">
      <% end %>
    </div>
  </div>
</div>