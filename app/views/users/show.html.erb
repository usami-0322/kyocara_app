<div class="main users-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/#{@user.image_name}" %>">
      <p><%= @user.name %></p>
      <p><%= @user.email %></p>
      <% if @current_user.id == @user.id %>
      <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>
      <% @user.posts.each do |post| %>
      <div class="post-index-item">
      <div class="post-left">
        <img src="<%="/#{post.user.image_name}" %>">
      </div>
      <div class="post-right">
        <div class="post-user-name">
          <%= linl_to(post.user.name, "/users/#{post.user.id}") %>
        </div>
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
      </div>
      <% end %>
    </div>
  </div>