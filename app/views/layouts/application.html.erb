<!DOCTYPE html>
<html>
  <head>
    <title>KyoucaraApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
    <h1 class="top-logo"><%= link_to("KYOCARA","/") %></h1>
    <nav>
      <ul class="nav-menu">
        <% if session[:user_id] %>
        <li><%= link_to("新規投稿", "/posts/new") %></li>
        <li><%= link_to("投稿一覧", "/posts/index") %></li>
        <li><%= link_to("ユーザー一覧", "/users/index") %></li>
        <li><%= link_to("ログアウト", "/logout", {method: :post}) %></li>
        <% else %>
        <li><%= link_to("KYOCARAについて","/about") %></li>
        <li><%= link_to("新規登録", "/users/new") %></li>
        <li><%= link_to("ログイン", "/login") %></li>
        <% end %>
      </ul>
    </nav>
    </header>
    
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
